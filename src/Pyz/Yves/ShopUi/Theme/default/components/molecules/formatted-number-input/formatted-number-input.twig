{% extends molecule('formatted-number-input', '@SprykerShop:ShopUi') %}

{% set numberFormatConfig = {} %}
{% for key, value in getNumberFormatConfig(app.locale).toArray() %}
    {% set numberFormatConfig = numberFormatConfig | merge({ (key | replace({'_symbol': '', '_': '-'})): value }) %}
{% endfor %}

{% define attributes = {
    'grouping-separator': numberFormatConfig['grouping-separator'] | default,
    'decimal-separator': numberFormatConfig['decimal-separator'] | default('.'),
    'decimal-rounding': numberFormatConfig['decimal-rounding'] | default(3),
} %}
